@{
    ViewBag.Title = "Index";
}

<h2>Lecture presentation</h2>

<form>File Name: </form>

@if (User.IsInRole("Lecturer"))
{
    using (Html.BeginForm("UploadFile", "Teaching", FormMethod.Post,
    new { enctype = "multipart/form-data" }))
    {
        <input type="file" name="selectedFile" />
        <input type="submit" value="Upload" />
    }
}

@foreach (var item in Model)
{
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.StudentName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Mark)
        </td>
        <td>
            @Html.ActionLink("DownloadFile", "DownloadFile", new { fileName = item.FileName })
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id = item.Id }) |
            @Html.ActionLink("Details", "Details", new { id = item.Id })

        </td>
    </tr>
}










@if (User.IsInRole("Student")) { 
<p>List of uploaded lecture files :</p>
<div class="row" style="font-size:x-small;background-color:antiquewhite;border:1px solid blue;">
    @foreach (var item in Model)
    {
        <a href="~/FileUploads/@item.Split('\\')[(item.Split('\\').Length-1)]"
            target="_blank">Download File</a>
        <br />
    }
</div>
}















